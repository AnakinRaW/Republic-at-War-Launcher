                                   NormalImage="../Resources/Visual/Language/SpanishIdle.png"
                                   HoverImage="../Resources/Visual/Language/SpanishHover.png"
                                   PressedImage="../Resources/Visual/Language/SpanishHover.png"
                                   CheckedImage="../Resources/Visual/Language/SpanishHover.png"/>
            <mafc:ImageRadioButton Height="19" Width="102" HorizontalAlignment="Left" Margin="0,5,0,0" GroupName="Languages"
                                   NormalImage="../Resources/Visual/Language/SwedishIdle.png"
