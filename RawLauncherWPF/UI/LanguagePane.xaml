        </StackPanel>
        
        <mafc:ImageButton Height="60" Width="322" VerticalAlignment="Top" Margin="0,180,0,0"
                          NormalImage="../Resources/Visual/Language/ChangeLanguageIdle.png"
                          HoverImage="../Resources/Visual/Language/ChangeLanguageHover.png"
                          PressedImage="../Resources/Visual/Language/ChangeLanguageHover.png"/>
        
        <Image Source="../Resources/Visual/Language/LanguageInfo.png" Height="24" Width="223"
               VerticalAlignment="Top" Margin="0,260,0,0"/>
        
