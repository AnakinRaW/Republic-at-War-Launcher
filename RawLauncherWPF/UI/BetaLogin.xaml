<Window x:Class="RawLauncherWPF.UI.BetaLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:textBoxes="clr-namespace:ModernApplicationFramework.Controls.TextBoxes;assembly=ModernApplicationFramework"
        mc:Ignorable="d"
        Title="BetaLogin" Height="132.558" Width="378.488"
        Closed="BetaLogin_OnClosed">
    <Grid>
        <StackPanel>
            <DockPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" Height="26" Width="243">
                <Label>Windows User Name:</Label>
                <textBoxes:TextBox x:Name="UserName" Height="20" Width="120" TabIndex="0"/>
            </DockPanel>
            <DockPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" Height="26" Width="243">
                <Label>Launcher Password:</Label>
                <PasswordBox x:Name="Password" Height="20" Width="120" TabIndex="1"/>
            </DockPanel>
        </StackPanel>
        <Button VerticalAlignment="Bottom" Click="ButtonBase_OnClick" TabIndex="2" IsDefault="True">Login</Button>
    </Grid>
</Window>
